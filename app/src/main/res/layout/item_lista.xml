<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeJuegos"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:background="@drawable/border">

    <ImageView
        android:id="@+id/ivNoticia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:contentDescription="Icono" />

    <TextView
        android:id="@+id/tvTitular"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/ivNoticia"
        android:layout_toRightOf="@id/ivNoticia"
        android:gravity="center_vertical"
        android:lines="2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvFechaNoticia"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_marginTop="25sp"
        android:layout_marginEnd="10sp"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvHoraNoticia"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="10sp"
        android:textSize="10sp" />

</RelativeLayout>